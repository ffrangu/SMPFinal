                        </span>
                        <span class="nav-text font-size-lg">@ViewData["Title"]</span>
                    </a>
                </li>
            </ul>
        </div>
        <!--end::Toolbar-->
    </div>
    <!--end::Card header-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (showError)
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
        }

        <div style="display:none">
            @Html.HiddenFor(m => Model.Id)
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--begin::Card body-->
        <div class="card-body">
            <!--begin::Tab-->
            <div class="tab-pane px-7" id="kt_user_edit_tab_2">
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-xl-7 my-2">

                        <div class="row">
                            <label class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <h5 class="font-weight-bold mb-6">Informatat e gradës</h5>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-3 text-lg-right text-left required">Emri</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.Emri, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Emri" })
                                @Html.ValidationMessageFor(m => m.Emri, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-3 text-lg-right text-left required">Paga mujore</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.PagaMujore, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Paga mujore" })
                                @Html.ValidationMessageFor(m => m.PagaVjetore, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-3 text-lg-right text-left required">Paga vjetore</label>
                            <div class="col-9">
                                @Html.TextBoxFor(m => m.PagaVjetore, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Paga vjetore" })
                                @Html.ValidationMessageFor(m => m.PagaVjetore, "", new { @class = "text-danger" })
                            </div>
                        </div>







                    </div>
                </div>
            </div>
            <!--end::Tab-->
        </div>
        <!--begin::Card body-->
        <!--begin::Footer-->
        <div class="card-footer">
            <div class="row">
                <div class="col-xl-2"></div>
                <div class="col-xl-7">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-9">
                            <button type="submit" class="btn btn-light-primary font-weight-bold">Ruaj</button>
                            <a href="#" class="btn btn-clean font-weight-bold">Anulo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Footer-->
    }
</div>
<!--end::Card-->







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}