@model List<GradaListViewModel>

@{
    ViewData["Title"] = "Lista e gradave";
}


<div class="card card-custom gutter-b">
    <div class="card-header flex-wrap py-3">
        <div class="card-title">
            <h3>
                Lista e gradave
            </h3>

        </div>

    </div>

    <div class="card-body table-responsive">
        <table class="table table-hover table-separate table-head-custom" id="data-table-nosort">

            <thead>
                <tr>
                    <th>
                        Emri
                    </th>
                    <th>
                        Paga mujore
                    </th>
                    <th>
                        Paga vjetore
                    </th>
                    <th>
                        Veprimet
                    </th>

                </tr>


            </thead>

            <tbody class="datatable-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Emri
                        </td>
                        <td>
                            @item.PagaMujore
                        </td>
                        <td>
                            @item.PagaVjetore
                        </td>
                        <td>
                            <div class="flex sm:justify-center items-center">
                                <a href="@Url.Action("Edit",new {id = item.Id })" class="btn btn-icon btn-outline-primary btn-xs" title="Edit">
                                    <i class="flaticon2-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>


        </table>


    </div>

</div>